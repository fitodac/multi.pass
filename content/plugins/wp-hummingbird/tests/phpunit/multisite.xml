<phpunit
        bootstrap="../bootstrap.php"
        backupGlobals="false"
        colors="true"
>
    <php>
        <const name="WP_TESTS_MULTISITE" value="1" />
    </php>
    <testsuites>
        <!-- Default test suite to run all tests -->
        <testsuite>
            <directory prefix="test-" suffix=".php">../</directory>
        </testsuite>
    </testsuites>
</phpunit>
